{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@ui": ["components/ui"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@middleware/*": ["middleware/*"],
      "@util/*": ["util/*"],
      "@views/*": ["views/*"],
      "@services/*": ["services/*"],
    },
  },
  "include": ["src", "*.d.ts", "scripts"],
  "exclude": ["node_modules"]
}
